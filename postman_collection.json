{
"info": {
"_postman_id": "YOUR_COLLECTION_ID",
"name": "Social Network API (Refactored)",
"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
"description": "API endpoints for the refactored social network backend."
},
"item": [
{
"name": "Auth",
"item": [
{
"name": "Sign Up (Create User)",
"request": {
"method": "POST",
"header": [
{
"key": "Content-Type",
"value": "application/json"
}
],
"body": {
"mode": "raw",
"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\",\n    \"dob\": \"1990-01-01\",\n    \"avatar_url\": \"\",\n    \"about_me\": \"Just a test user\"\n}"
},
"url": {
"raw": "{{baseUrl}}/api/users/",
"host": ["{{baseUrl}}"],
"path": ["api", "users", ""]
},
"description": "Creates a new user account. Equivalent to Sign Up."
},
"response": []
},
{
"name": "Sign In",
"request": {
"method": "POST",
"header": [
{
"key": "Content-Type",
"value": "application/json"
}
],
"body": {
"mode": "raw",
"raw": "{\n    \"identifier\": \"test@example.com\", \n    \"password\": \"password123\"\n}"
},
"url": {
"raw": "{{baseUrl}}/api/auth/signin",
"host": ["{{baseUrl}}"],
"path": ["api", "auth", "signin"]
},
"description": "Logs in a user and sets the session_token cookie."
},
"response": []
},
{
"name": "Sign Out",
"request": {
"method": "POST",
"url": {
"raw": "{{baseUrl}}/api/auth/signout",
"host": ["{{baseUrl}}"],
"path": ["api", "auth", "signout"]
},
"description": "Logs out the current user by deleting the session."
},
"response": []
},
{
"name": "Update User Privacy [Auth Required]",
"request": {
"method": "PUT",
"header": [
{
"key": "Content-Type",
"value": "application/json"
}
],
"body": {
"mode": "raw",
"raw": "{\n    \"is_private\": true \n}"
},
"url": {
"raw": "{{baseUrl}}/api/users/{{userId}}/privacy",
"host": ["{{baseUrl}}"],
"path": ["api", "users", "{{userId}}", "privacy"]
},
"description": "Updates the privacy setting (public/private) for the specified user. Requires authentication."
},
"response": []
}
]
},
{
"name": "Notifications",
"item": [
{
"name": "List Notifications [Auth Required]",
"request": {
"method": "GET",
"url": {
"raw": "{{baseUrl}}/api/notifications?page=1&page_size=10",
"host": ["{{baseUrl}}"],
"path": ["api", "notifications"],
"query": [
{
"key": "page",
"value": "1"
},
{
"key": "page_size",
"value": "10"
}
]
},
"description": "Retrieves a paginated list of notifications for the authenticated user. Includes an unread count."
},
"response": []
},
{
"name": "Mark Notification as Read [Auth Required]",
"request": {
"method": "PATCH",
"url": {
"raw": "{{baseUrl}}/api/notifications/{{notificationId}}/read",
"host": ["{{baseUrl}}"],
"path": ["api", "notifications", "{{notificationId}}", "read"]
},
"description": "Marks a specific notification as read for the authenticated user. Replace `{{notificationId}}` with the actual ID."
},
"response": []
},
{
"name": "Mark All Notifications as Read [Auth Required]",
"request": {
"method": "POST",
"url": {
"raw": "{{baseUrl}}/api/notifications/read-all",
"host": ["{{baseUrl}}"],
"path": ["api", "notifications", "read-all"]
},
"description": "Marks all notifications as read for the authenticated user."
},
"response": []
}
]
},
